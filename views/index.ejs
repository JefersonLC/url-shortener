<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('common/head') %> 
  <link rel="stylesheet" href="css/style.css">
  <title>Url - Shortener</title>
</head>

<body>
  <main>
    <%- include('common/header') %>
    <section class="section-layout">
      <% if(message.SUCCESS_MSSG) {
          message.SUCCESS_MSSG.forEach(messag=> { 
      %>
        <div class="alert alert-success">
          <h4 class="alert-heading">Success!</h4>
            <p>Your new link:</p>
            <hr>
          <p class="mb-0"><%= messag %></p>
        </div>
      <% 
          }) 
        }
      %>
      <form class="d-flex justify-content-center gap-3 form-layout" action="/" method="POST">
        <div class="w-100">
          <input class="form-control" type="url" name="url" id="url" autocomplete="off" placeholder="Enter a url. ex: https://www.website.com">
        </div>
        <button class="btn btn-primary" type="submit">Enviar</button>
      </form>
      <% if(message.ERROR_MSSG) {
          message.ERROR_MSSG.forEach(messag=> { 
      %>
        <div class="alert alert-danger">
          <%= messag %>
        </div>
      <% 
          }) 
        }
      %>
    </section>
    <%- include('common/footer') %>
  </main>
</body>

</html>